<body>
    <div class="carousel1">
      <div class="slide1">P1</div>
      <div class="slide1">P2</div>
      <div class="slide1">P3</div>
    </div>
    <div class="pagination1">
      <button class="index1 active1" onclick="page(this)"></button>
      <button class="index1" onclick="page(this)"></button>
      <button class="index1" onclick="page(this)"></button>
    </div>
    <script>
        const carousel = document.querySelector('.carousel1');
const children = document.querySelectorAll('.index1');
function page(child){
 const index = Array.from(children).indexOf(child);
 carousel.scrollTo(index * carousel.clientWidth, 0);
}
carousel.addEventListener('scroll1', e => {
  const page = Math.ceil(carousel.scrollLeft/carousel.clientWidth);
  children.forEach(e => {
    e.classList.remove('active1');
  });
  console.log(page)
  children.item(page).classList.add('active1');
})
carousel.addEventListener("wheel", e => {
  if(e.deltaY > 0){
    carousel.scrollBy(carousel.clientWidth,0)
  }else{
    carousel.scrollBy(-carousel.clientWidth,0)
  }
})
    </script>
